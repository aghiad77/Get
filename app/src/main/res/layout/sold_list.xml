<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/home_color_2"
    android:gravity="right"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:padding="8dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true" />

            <ImageView
                android:id="@+id/add"
                android:src="@raw/green_circle"
                android:layout_alignEnd="@+id/product_image"
                android:layout_marginTop="110dp"
                android:layout_marginRight="130dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:ignore="RtlCompat" />

            <RelativeLayout
                android:id="@+id/group_879"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/product_name"
                    android:textSize="16sp"
                    android:textColor="@color/grey_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:textDirection="rtl"/>

                <TextView
                    android:id="@+id/value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/sold_rectangle"
                    android:layout_below="@+id/new_price"
                    android:layout_toEndOf="@+id/product_store"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/button_text_color"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/_________color"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/red"
                    android:src="@drawable/line"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/product_name"/>


                <TextView
                    android:id="@+id/new_price"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/_________color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/old_price" />

                <TextView
                    android:id="@+id/product_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_price"
                    android:textColor="@color/grey_font"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:textDirection="rtl"/>


            </RelativeLayout>

            <ImageView android:id="@+id/g"
                android:src="@raw/sale"
                android:layout_width="60dp"
                android:layout_height="60dp" />


        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>