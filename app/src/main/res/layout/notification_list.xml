<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/home_color_2">

    <RelativeLayout
        android:id="@+id/group_989"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/rectangle_notification" />


        <TextView
            android:id="@+id/notification_text"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:fontFamily="Helvetica LT Std"
            android:scrollbars="vertical"
            android:layout_below="@+id/notification_title"
            android:text="@string/description_string"
            android:textColor="@color/_________color"
            android:textDirection="rtl"
            android:gravity="right"
            android:layout_marginTop="3dp"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:fontFamily="Cairo"
            android:layout_marginTop="15dp"
            android:text="@string/product_name"
            android:textColor="@color/_________color"
            android:textSize="16sp"
            android:textDirection="rtl"
            android:gravity="right"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notification_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:foregroundGravity="left"
            android:src="@drawable/ic_notification_menu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            tools:ignore="VectorDrawableCompat" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>