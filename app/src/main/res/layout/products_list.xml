<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/home_color_2"
    android:gravity="right"
    android:layoutDirection="rtl">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:padding="8dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <ImageView
            android:id="@+id/product_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/add"
            android:src="@raw/green_circle"
            android:layout_alignEnd="@+id/product_image"
            android:layout_marginTop="110dp"
            android:layout_marginRight="150dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="RtlCompat" />


            <RelativeLayout
                android:id="@+id/group_879"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/product_name"
                    android:textSize="16sp"
                    android:textColor="@color/grey_font"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textDirection="rtl"/>

                <TextView android:id="@+id/product_price"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/_________color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/product_name"
                    android:textDirection="rtl"/>


                <TextView
                    android:id="@+id/product_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_price"
                    android:textStyle="bold"
                    android:textColor="@color/grey_font"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:textDirection="rtl"/>


            </RelativeLayout>

        <ImageView android:id="@+id/favorite"
            android:background="@drawable/white_star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:ignore="RtlCompat" />

    </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>