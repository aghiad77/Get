<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView android:id="@+id/rectangle_2"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/rectangle2" />



                <TextView android:id="@+id/categories_text"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/_________color"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="350dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="الفئات"
                    />

                <Button
                    android:id="@+id/categories_all"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/all_style"
                    android:layout_marginTop="350dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="عرض الكل" />

                <TextView android:id="@+id/shops_text"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/_________color"
                    android:layout_marginTop="25dp"
                    android:gravity="right"
                    android:layout_below="@+id/Lmain"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="المتاجر"
                    />

                <TextView android:id="@+id/products_text"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/_________color"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/rlMain"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="أحدث المنتجات"
                    />

                <TextView android:id="@+id/offers_text"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/_________color"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/lrmain"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="العروض"
                    />

                <TextView android:id="@+id/solds_text"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="@color/_________color"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/offermain"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="التخفيضات"
                    />

                <ImageView
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/homeline"
                    android:layout_below="@+id/Lmain"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/line_2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/homeline"
                    android:layout_below="@+id/rlMain"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/line_3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/homeline"
                    android:layout_below="@+id/lrmain"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/line_4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/homeline"
                    android:layout_below="@+id/offermain"
                    android:layout_marginTop="10dp"/>


                <RelativeLayout android:id="@+id/get_logo"
                    android:layout_marginTop="34dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    tools:ignore="RtlCompat">


                    <ImageView android:id="@+id/t"
                        android:src="@raw/logo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_width="100dp"
                        android:layout_height="30dp" />

                </RelativeLayout>

                <RelativeLayout android:id="@+id/slide"
                    android:layout_marginTop="52dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat">

                    <ImageView
                        android:id="@+id/slide_image1"
                        android:src="@drawable/line_slider"
                        android:layout_width="30dp"
                        android:layout_height="7dp" />

                    <ImageView
                        android:id="@+id/slide_image2"
                        android:layout_below="@+id/slide_image1"
                        android:src="@drawable/line_slider"
                        android:layout_width="30dp"
                        android:layout_height="7dp" />

                    <ImageView
                        android:id="@+id/slide_image3"
                        android:layout_below="@+id/slide_image2"
                        android:src="@drawable/line_slider"
                        android:layout_width="30dp"
                        android:layout_height="7dp" />


                </RelativeLayout>

                <RelativeLayout android:id="@+id/cart"
                    android:layout_marginTop="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlCompat">

                    <TextView android:id="@+id/cart_count"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/design_default_color_error"
                        android:layout_marginLeft="10dp"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:gravity="center" />

                    <ImageView android:id="@+id/cart_image"
                        android:src="@raw/mcart"
                        android:foregroundGravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />

                </RelativeLayout>

                <RelativeLayout android:id="@+id/search"
                    android:layout_marginTop="94dp"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/all_style"
                    android:layout_centerHorizontal="true">

                    <EditText
                        android:id="@+id/edittext"
                        android:layout_width="340dp"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:hint="ما الذي تبحث عنه؟"
                        android:textColorHint="#ACB4AC"
                        android:gravity="right"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textColor="#ACB4AC"
                        android:textDirection="rtl"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"/>

                    <ImageView
                        android:id="@+id/image_search"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/search"
                        tools:ignore="VectorDrawableCompat" />


                </RelativeLayout>


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:iss_auto_cycle="true"
                    app:iss_period="3000"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="150dp"
                    app:iss_delay="0"/>

                <LinearLayout
                    android:id="@+id/Lmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/categories_text"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/shops_text"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_shops"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/products_text"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/offermain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/offers_text"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_offers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lrrmain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/solds_text"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_solds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/home_color_2"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view"
        app:theme="@style/YourStyle"
        android:layout_gravity="end"
        app:itemTextColor="@drawable/navigation_drawer_color"
        app:itemIconTint="@drawable/navigation_drawer_color"/>

</androidx.drawerlayout.widget.DrawerLayout>

