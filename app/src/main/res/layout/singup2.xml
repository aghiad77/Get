<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB">

    <ScrollView android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            tools:ignore="RtlCompat">

            <Spinner
                android:id="@+id/cityspinner"
                android:background="@drawable/all_style"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_below="@+id/get"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:supportsRtl="true" />

            <RelativeLayout android:id="@+id/component_2___1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="180dp"
                android:layout_below="@+id/get"
                android:layout_centerInParent="true"
                tools:ignore="RtlCompat">


                <EditText android:id="@+id/editaddress"
                    android:background="@drawable/all_style"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="324dp"
                    android:layout_height="44dp"
                    android:textColor="@color/____________color"
                    android:gravity="right|center"
                    android:hint="@string/address_string"
                    android:textColorHint="@color/_________color"
                    android:padding="10dp"
                    android:textDirection="anyRtl"/>


            </RelativeLayout>


            <RelativeLayout android:id="@+id/get"
                android:layout_marginTop="100dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="RtlCompat">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:background="@raw/logo" />

            </RelativeLayout>

            <Button android:id="@+id/button"
                android:background="@drawable/botton_box"
                android:layout_width="324dp"
                android:layout_height="40dp"
                android:text="الــتالــي"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="280dp"
                android:layout_below="@+id/get"
                android:layout_centerInParent="true"
                android:textColor="@color/text_shadow_white"/>


        </RelativeLayout>

    </ScrollView>
</LinearLayout>